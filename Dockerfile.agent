FROM golang:1.25-alpine AS builder
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/kuberoot-agent ./cmd/agent

FROM alpine:3.20
RUN adduser -D -g '' kuberoot
USER kuberoot
WORKDIR /home/kuberoot
COPY --from=builder /out/kuberoot-agent /usr/local/bin/kuberoot-agent
ENTRYPOINT ["/usr/local/bin/kuberoot-agent"]
